{
	"name": "@fermion-app/sdk",
	"license": "MIT",
	"version": "0.1.0",
	"exports": {
		"./recorded-video": {
			"types": "./dist/recorded-video.d.ts",
			"import": "./dist/recorded-video.mjs",
			"require": "./dist/recorded-video.js"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/fermion-app/sdk.git"
	},
	"scripts": {
		"build": "tsup src/recorded-video.ts --format cjs,esm --dts --outDir dist",
		"release": "pnpm run build && changeset publish",
		"lint": "tsc && eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui"
	},
	"devDependencies": {
		"@changesets/cli": "2.27.1",
		"@typescript-eslint/eslint-plugin": "7.1.0",
		"@typescript-eslint/parser": "7.1.0",
		"@vitest/coverage-v8": "1.3.1",
		"@vitest/ui": "1.3.1",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-prettier": "5.1.3",
		"happy-dom": "13.3.8",
		"prettier": "3.2.5",
		"tsup": "8.0.2",
		"typescript": "5.4.2",
		"vitest": "1.3.1"
	},
	"packageManager": "pnpm@8.7.6"
}
